<h3>All Users</h3>
<td><%= link_to 'New User', '/users/new' %></td>

<table>
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.email %></td>
                <td><%= link_to 'Show Passwords', passwords_index_path(user.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>

